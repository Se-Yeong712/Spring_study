<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"	
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- setter로만 사용했다면 이렇게 사용해야함.  -->
	<!-- <bean id = "tv" class = "com.myspring.step5.SamsungTV">
	<property name="speaker" ref = "apple"/>	setter는 property를 사용
	<property name="price" value ="2700000"/>
	</bean> -->
	
	<!-- p namespace 이용 -->
	<bean id ="tv" class = "com.myspring.step6.SamsungTV" p:speaker-ref="sony" p:price = "2700000">
	</bean>
	
	<bean id="sony" class="com.myspring.step6.SonySpeaker"/>
	<bean id="apple" class="com.myspring.step6.AppleSpeaker"/>
	

</beans>
